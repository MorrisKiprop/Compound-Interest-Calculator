<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SmartLoansKenya"
        android:textAlignment="center"
        android:textColor="#00FF0A"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/calculationinstruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose the type of compoundment you want to calculate from the options below"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btnContionuousCompoundment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continuous Compoundment(For Infinite Periods)" />

    <Button
        android:id="@+id/btnDailyCompoundmentNormalYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daily Compoundment(For Normal Year)"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnDailyCompoundmentLeapYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daily Compoundment(For Leap Year)"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnWeeklyCompoundment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weekly Compoundment" />

    <Button
        android:id="@+id/btnBiMonthlyCompoundment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bi-Monthly Compoundment" />

    <Button
        android:id="@+id/btnSemiMonthlyCompoundment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Semi-Monthly Compoundment" />

    <Button
        android:id="@+id/btnMonthlyCompoundment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monthly Compoundment"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnQuartelyCompoundment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quartely Compoundment"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnSemiAnnualCompoundment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Semi-Annualy Compoundment"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnAnnualCompoundment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Annualy Compoundment"
        android:textAlignment="center" />


</LinearLayout>

